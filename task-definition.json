{
  "family": "factoryflow",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::221082186837:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "frontend",
      "image": "221082186837.dkr.ecr.us-east-1.amazonaws.com/factoryflow-frontend:latest",
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/factoryflow",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    },
    {
      "name": "backend",
      "image": "221082186837.dkr.ecr.us-east-1.amazonaws.com/factoryflow-backend:latest",
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "DB_HOST",
          "value": "factoryflow-db.cali4sooy1kv.us-east-1.rds.amazonaws.com"
        },
        {
          "name": "DB_PASSWORD",
          "value": "YourSecurePassword123"
        }
      ],
      "essential": true
    }
  ]
}
